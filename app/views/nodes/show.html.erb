<% @node.parents.each do |p| %>
  <%= linknode(p) %> /
<% end %>
<b><%= @node.name %></b>

<% if @node.root? %>
  <h2>Sanger Programs</h2>
<% else %>
  <h2><%= @node.name %></h2>
<% end %>

<% if @node.nodes.empty? %>
  None
<% else %>
  <ul>
    <% @node.nodes.each do |c| %>
	     <li>
          <b><%= linknode(c) %></b>
            <% unless @node.root? %>
              <%= edit_node(c) %>
              <%= delete_node(c) %>
            <% end %>
        </li>
    <% end %>
  </ul>
<% end %>

<br/>
<% unless @node.root? %>
  <h4>Add child node</h4>
  <%= form_tag(controller: "nodes", action: "create", method: "post") do %>
    <%= label_tag(:name, "Name:") %>
    <%= text_field_tag(:name) %>
    <%= hidden_field_tag :parent_id, @node.id %>
    <br/><br/>
    <%= submit_tag("Create") %>
  <% end %>
<% end %>

