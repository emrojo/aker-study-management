<div>
  <span class="node-legend" id="owned">Green nodes</span> are owned by you<br>
  <span class="node-legend" id="editable">Teal nodes</span> are those which you have been given permission to edit
</div>
<%= render "show", locals: { tab: 'tree' } do %>
  <div id="tree" class="tab-pane active">


    <form id="edit-panel" style="padding-top:1em;" class="form-inline">
      <div class="form-group">
        <label for="selected-node" class="selected-node-group">Selected Node:</label>
        <input type="text" readonly autocomplete="off" class="form-control" id="selected-node" class="selected-node-group" disabled="disabled">
      </div>
      &nbsp;
      <div class="form-group">
        <label for="new-node">New Node:</label>
        <input type="text" autocomplete="off" class="form-control" id="new-node">
      </div>
      &nbsp;

      <button type="button" class="btn btn-success" id="btn-add-nodes" disabled="disabled">Add Node</button>
      &nbsp;
      <button type="button" class="btn btn-danger"  id="btn-delete-nodes" disabled="disabled">Delete</button>



    </form>
     <br />
      <div type="button" class="btn btn-warning" data-user-preferences-expand="true">Expand tree</div>
    <br />
    <br/>

    <div class="modal fade" id="editNodeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header"></div>
          <div class="modal-body text-center">
            <i class="fa fa-spinner fa-spin fa-2x fa-fw text-center"></i>
          </div>
        </div>
      </div>
    </div>

    <div id="tree-hierarchy"></div>

  </div>
<% end %>
