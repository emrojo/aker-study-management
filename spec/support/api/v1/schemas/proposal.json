{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Proposal",
    "description": "A proposal. Belongs to an Aim.",
    "type": "object",
    "properties": {
      "data": {
        "type": "object",
        "properties": {
          "attributes": {
            "type": "object",
            "properties": {
              "name": { "type": "string" }
            },
            "required": ["name"]
          }
        },
        "required": ["attributes"]
      }
    },
    "required": ["data"]
}